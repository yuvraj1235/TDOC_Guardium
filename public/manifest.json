{
  "manifest_version": 3,
  "name": "Guardian Password Manager",
  "version": "1.0",

  "description": "Secure password manager with blockchain-based integrity verification",

  "action": {
    "default_popup": "popup.html"
  },

  "permissions": [
    "storage",
    "tabs",
    "activeTab"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ]
}
